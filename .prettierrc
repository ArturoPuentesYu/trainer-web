{
  "printWidth": 80,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "arrowParens": "avoid",

  "htmlWhitespaceSensitivity": "ignore",
  "plugins": ["prettier-plugin-astro"],

  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "printWidth": 80,
        "bracketSameLine": false,
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
