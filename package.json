    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.5"
  },
  "lint-staged": {
    "src/**/*.{js,ts,astro}": [
      "pnpm run lint",
      "pnpm run format"
