---
// src/components/Navbar.astro
import {
  Astronav,
  MenuItems,
  MenuIcon,
  OpenIcon,
  CloseIcon,
} from 'astro-navbar'

import MenuBurger from '/public/icons/menu-burger.svg'
import Cross from '/public/icons/cross.svg'
---

<header class="bg-rojo text-blanco shadow-md">
  <Astronav closeOnClick>
    <div class="container mx-auto p-4 flex justify-between items-center">
      <a href="/" class="text-xl font-bold">Jose Aguilar</a>

      <div class="md:hidden">
        <MenuIcon>
          <OpenIcon>
            <MenuBurger width={30} height={30} />
          </OpenIcon>
          <CloseIcon> <Cross width={30} height={30} /> </CloseIcon>
        </MenuIcon>
      </div>
      <MenuItems class="hidden md:flex md:space-x-6">
        <ul class="flex flex-col md:flex-row md:space-x-4">
          <li><a href="/" class="px-4 py-2 hover:text-negro">Inicio</a></li>
          <li>
            <a href="/about" class="px-4 py-2 hover:text-negro">Sobre m√≠</a>
          </li>
          <li>
            <a href="/services" class="px-4 py-2 hover:text-negro">Servicios</a>
          </li>
          <li>
            <a href="/contact" class="px-4 py-2 hover:text-negro">Contacto</a>
          </li>
        </ul>
      </MenuItems>
    </div>
  </Astronav>
</header>
