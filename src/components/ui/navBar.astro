---
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar'
---

<div class="bg-rojo text-blanco shadow-md">
  <Astronav>
    <div class="container mx-auto p-4 flex justify-between items-center">
      <a href="/" class="text-xl font-bold">Boxing Trainer</a>
      <MenuIcon class="md:hidden text-white text-2xl" />
    </div>
    <MenuItems
      class="hidden md:flex md:space-x-6 md:static absolute top-full left-0 w-full md:w-auto bg-rojo md:bg-transparent transition-all duration-300 ease-in-out"
    >
      <ul class="flex flex-col md:flex-row md:space-x-4">
        <li>
          <a href="/" class="block px-4 py-2 md:p-0 hover:text-negro">Inicio</a>
        </li>
        <li>
          <a href="/contact" class="block px-4 py-2 md:p-0 hover:text-negro">
            Contacto
          </a>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</div>
